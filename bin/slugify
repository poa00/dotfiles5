#!/usr/bin/env sh
# Output a string as a slug
#
# Usage:
#
#   printf 'Foo bar baz.\n' | slugify -d _

delim='-'
while getopts hd: opt; do
    case $opt in
    d) delim="$OPTARG";;
    h) awk 'NR == 1 { next } /^$/ { exit } { print substr($0, 3) }' "$0"
       exit ;;
    esac
done
shift $(( OPTIND - 1 ))

awk -v delim="$delim" '
{
    gsub("[^[:alnum:]]", delim)
    gsub(delim delim "+", delim)
    sub(delim "$", "")
    print tolower($0)
}
'
