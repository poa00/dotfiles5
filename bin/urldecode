#!/usr/bin/env sh
# Decode urlencoded stdin
#
# Usage:
#   printf 'foo%20bar' | urldecode

while getopts h opt; do
    case $opt in
    h) awk 'NR == 1 { next } /^$/ { exit } { print substr($0, 3) }' "$0"
       exit ;;
    esac
done
shift $(( OPTIND - 1 ))

{
    printf '<foo><![CDATA['
    cat
    printf ']]></foo>\n';
} \
    | xmlstarlet sel -T -t -v 'str:decode-uri(//foo)'
